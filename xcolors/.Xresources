Xcursor.theme:    Vanilla-DMZ-AA

!-- Xft settings -- !
Xft.dpi:        96
Xft.antialias:  1
Xft.rgba:       rgb
Xft.autohint:   0
Xft.hinting:    1
Xft.hintstyle:  hintfull
Xft.lcdfilter:  lcddefault

!urxvt color scheme:
URxvt*background: [80]Black
URxvt.depth: 32
URxvt*.foreground: #00DD00
URxvt.iconFile: /usr/share/icons/Clarity/scalable/apps/terminal.svg

!urxvt fonts: 
URxvt.font: xft:Hack:antialias=true:pixelsize=14
URxvt.boldFont: xft:Hack:bold:antialias=true:pixelsize=14
URxvt.italicFont: xft:Hack:italic:antialias=true:pixelsize=14
URxvt.boldItalicFont: xft:Hack:bolditalic:antialias=true:pixelsize=14
URxvt.letterSpace: -1

!urxvt extensions:
URxvt.perl-ext-common:  default,matcher,clipboard

!enabling clickable links:
URxvt.urlLauncher:      /usr/bin/firefox
URxvt.matcher.button:   1 
URxvt.url-select.underline:   true

!urxvt fix clipboard
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

!urxvt scrolling options and cursor style:
URxvt*saveLines: 500000
URxvt*scrollstyle:plain
URxvt*scrollBar: false
URxvt*cursorBlink: true
URxvt*cursorUnderline: false
! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
