Xcursor.theme:    Vanilla-DMZ-AA

!-- Xft settings -- !
!Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.lcdfilter:  lcddefault

!urxvt color scheme:
URxvt*background: [80]Black
URxvt.depth: 32
URxvt*.foreground: #00DD00
URxvt.iconFile: /usr/share/icons/Clarity/scalable/apps/terminal.svg

!urxvt fonts: 
URxvt*font: xft:DejaVu Sans Mono for Powerline:size=9
URxvt*boldFont: xft:DejaVu Sans Mono for Powerline:bold:size=9
URxvt*letterSpace: -2

!urxvt extensions:
URxvt.perl-ext-common:  default,matcher,clipboard

!enabling clickable links:
URxvt.urlLauncher:      /usr/bin/firefox
URxvt.matcher.button:   1 
URxvt.url-select.underline:   true

!urxvt fix clipboard
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

!urxvt scrolling options and cursor style:
URxvt*saveLines: 12000
URxvt*scrollstyle:plain
URxvt*scrollBar: false
URxvt*cursorBlink: true
URxvt*cursorUnderline: false
